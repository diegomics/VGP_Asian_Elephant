#!/bin/bash

#SBATCH -J arima.index2
#SBATCH --mail-type=END,FAIL
#SBATCH --cpus-per-task=2
#SBATCH --mem=64G
#SBATCH --time=3:00:00

export PATH="${CONDA_BIN_DIR}:${PATH}"
